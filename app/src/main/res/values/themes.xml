<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.PopcornTime" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/secondary_color</item>
        <item name="windowSplashScreenBackground">@color/primary_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="Theme.PopcornTime.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="textAllCaps">true</item>
        <item name="titleCentered">true</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/titleMaterialToolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="titleMaterialToolbar" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nunitoregular</item>
    </style>

</resources>